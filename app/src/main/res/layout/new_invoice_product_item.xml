<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#f0f0f0">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/newInvoiceProductItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:text="Ä°phone 14 Pro Max 128GB"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/newInvoiceProductQuantityAndPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:text="3 Ad. x 100TRY"
            app:layout_constraintBottom_toTopOf="@+id/newInvoiceProductTotalPrice"
            app:layout_constraintEnd_toStartOf="@+id/newInvoiceProductCancelButton"
            app:layout_constraintTop_toTopOf="@+id/newInvoiceProductCancelButton" />

        <TextView
            android:id="@+id/newInvoiceProductTotalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="300TL"
            app:layout_constraintBottom_toBottomOf="@+id/newInvoiceProductCancelButton"
            app:layout_constraintEnd_toEndOf="@+id/newInvoiceProductQuantityAndPrice"
            app:layout_constraintTop_toBottomOf="@+id/newInvoiceProductQuantityAndPrice" />

        <ImageView
            android:id="@+id/newInvoiceProductCancelButton"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/cancel" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>