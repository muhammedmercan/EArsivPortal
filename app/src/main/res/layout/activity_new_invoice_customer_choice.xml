<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.NewInvoiceCustomerChoiceActivity">

    <include
        android:id="@+id/newInvoiceCustomerChoicePageActionBar"
        layout="@layout/toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/newInvoiceCustomerChoicePageTcTextInputLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        app:boxBackgroundColor="#f0f0f0"
        app:boxStrokeColor="#196AA5"
        app:boxStrokeWidth="0dp"
        app:hintTextColor="#196AA5"
        app:layout_constraintEnd_toStartOf="@+id/newInvoiceCustomerChoicePageRightGuideline"
        app:layout_constraintStart_toStartOf="@+id/newInvoiceCustomerChoicePageLeftGuideline"
        app:layout_constraintTop_toBottomOf="@+id/newInvoiceCustomerChoicePageActionBar">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="VKN/TCKN" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/newInvoiceCustomerChoicePageTitleTextInputLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        app:boxBackgroundColor="#f0f0f0"
        app:boxStrokeWidth="0dp"
        app:layout_constraintEnd_toStartOf="@+id/newInvoiceCustomerChoicePageRightGuideline"
        app:layout_constraintStart_toStartOf="@+id/newInvoiceCustomerChoicePageLeftGuideline"
        app:layout_constraintTop_toBottomOf="@+id/newInvoiceCustomerChoicePageSearchButton">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Unvan" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/newInvoiceCustomerChoicePageNameTextInputLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="10dp"
        app:boxBackgroundColor="#f0f0f0"
        app:boxStrokeWidth="0dp"
        app:layout_constraintEnd_toStartOf="@+id/newInvoiceCustomerChoicePageSurnameTextInputLayout"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/newInvoiceCustomerChoicePageLeftGuideline"
        app:layout_constraintTop_toBottomOf="@+id/newInvoiceCustomerChoicePageTitleTextInputLayout">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Adı" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/newInvoiceCustomerChoicePageSurnameTextInputLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:boxBackgroundColor="#f0f0f0"
        app:boxStrokeWidth="0dp"
        app:layout_constraintEnd_toStartOf="@+id/newInvoiceCustomerChoicePageRightGuideline"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/newInvoiceCustomerChoicePageNameTextInputLayout"
        app:layout_constraintTop_toTopOf="@+id/newInvoiceCustomerChoicePageNameTextInputLayout">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Soyadı" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/newInvoiceCustomerChoicePageSurnameTaxDepartmentInputLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        app:boxBackgroundColor="#f0f0f0"
        app:boxStrokeWidth="0dp"
        app:layout_constraintEnd_toStartOf="@+id/newInvoiceCustomerChoicePageRightGuideline"
        app:layout_constraintStart_toStartOf="@+id/newInvoiceCustomerChoicePageLeftGuideline"
        app:layout_constraintTop_toBottomOf="@+id/newInvoiceCustomerChoicePageNameTextInputLayout">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Vergi Dairesi" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/newInvoiceCustomerChoicePageSurnameAdressInputLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        app:boxBackgroundColor="#f0f0f0"
        app:boxStrokeWidth="0dp"
        app:layout_constraintEnd_toStartOf="@+id/newInvoiceCustomerChoicePageRightGuideline"
        app:layout_constraintStart_toStartOf="@+id/newInvoiceCustomerChoicePageLeftGuideline"
        app:layout_constraintTop_toBottomOf="@+id/newInvoiceCustomerChoicePageSurnameTaxDepartmentInputLayout">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:hint="Adres" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/newInvoiceCustomerChoicePageSearchButton"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="25dp"
        android:backgroundTint="#196AA5"
        android:text="Ara"
        app:cornerRadius="25dp"
        app:layout_constraintEnd_toStartOf="@+id/newInvoiceCustomerChoicePageRightGuideline"
        app:layout_constraintStart_toStartOf="@+id/newInvoiceCustomerChoicePageLeftGuideline"
        app:layout_constraintTop_toBottomOf="@+id/newInvoiceCustomerChoicePageTcTextInputLayout" />

    <Button
        android:id="@+id/newInvoiceCustomerChoicePageNextButton"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="35dp"
        android:backgroundTint="#196AA5"
        android:text="İleri"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/newInvoiceCustomerChoicePageRightGuideline"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/newInvoiceCustomerChoicePageLeftGuideline" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/newInvoiceCustomerChoicePageRightGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="15dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/newInvoiceCustomerChoicePageLeftGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="15dp" />

</androidx.constraintlayout.widget.ConstraintLayout>